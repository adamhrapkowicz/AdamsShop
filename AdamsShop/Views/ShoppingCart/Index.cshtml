@model ShoppingCartViewModel

@{
    ViewData["Title"] = "Index";
}

<h3>Shopping cart</h3>

<div class="row gx-3">
    <div class="col-8">
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <div class="card mb-4">
                <div class="row">
                    <div class="col-md-4">
                        <image src="@line.Pie.ImageThumbnailUrl" class="img-fluid rouded-start p-2" alt="@line.Pie.PieName"></image>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-text">@line.Amount x @line.Pie.PieName</h5>
                            <div class="d-flex justify-content-between">
                                <h6>@line.Pie.ShortDescription</h6>
                                <h2>@line.Pie.Price.ToString("c")</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div> 
        }
    </div>
</div>
<div class="col-4">
    <div class="card p-3">
        <div class="row">
            <h4 class="col">Total:</h4>
            <h4 class="col text-end">@Model.CartTotal.ToString("c")</h4>
        </div>
        <hr />
        <div class="text-center d-grid">
            <a class="btn btn-secondary" asp-controller="Order" asp-action="Checkout"><h4>Checkout now!</h4></a>
        </div>
    </div>
</div>